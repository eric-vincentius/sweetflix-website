  <script>
    window.addEventListener('scroll', () => {
        const header = document.querySelector('#navbar');
        const scrollY = window.scrollY;

        const newOpacity = Math.max(1 - scrollY / 200, 0.6);
        header.style.opacity = newOpacity;
    });

    document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('#add-to-cart-btn').forEach(button => {
      button.addEventListener('click', async (e) => {
        e.preventDefault();
        const target = e.currentTarget;

        const item = {
          name: target.dataset.name,
          price: target.dataset.price,
          imgPath: target.dataset.img
        };

        const res = await fetch('/keranjang/tambah', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(item)
        });

        if (res.ok) {
          Swal.fire(`✅ ${item.name} berhasil ditambahkan!`);
        } else {
          Swal.fire('❌ Produk gagal ditambahkan.');
        }
      });
    });
  });
  
  const form = document.getElementById('checkoutForm');

  form.addEventListener('submit', function (e) {
    e.preventDefault(); // prevent normal form submission

    const nama = document.getElementById('nama').value.trim();
    const whatsapp = document.getElementById('whatsapp').value.trim();
    const alamat = document.getElementById('alamat').value.trim();
    const bukti = document.getElementById('bukti').files[0];

    if (!nama || !whatsapp || !alamat || !bukti) {
      Swal.fire({
        icon: 'warning',
        title: 'Form Belum Lengkap',
        text: 'Semua field wajib diisi sebelum melanjutkan.',
        confirmButtonText: 'OK'
      });
      return;
    }

    // If all fields are filled, submit the form normally
    form.submit();
  });
  </script>
